{% extends 'base.html.twig' %}

{% block title %}Library{% endblock %}

{% block body %} 
    <main class="main">
        <section class="content">
            <h1>Edit book</h1>

            <form class="form" action="{{path('edit_book')}}" method="POST">
                <label for="title">Title:</label>
                <input type="text" id="title" value="{{ book.title }}" name="title" required>

                <label for="author">Author:</label>
                <input type="text" id="author" value="{{ book.author }}" name="author" required>

                <label for="isbn">ISBN:</label>
                <input type="text" id="isbn" value="{{ book.isbn }}" name="isbn" required>

                <label for="img">Image URL:</label>
                <input type="text" id="img" value="{{ book.img }}" name="img" required>

                <input type="hidden" value="{{ book.id }}" name="id">

                <button type="submit">Submit</button>
            </form>
        </section>
    </main>
{% endblock %}